<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Carousel.Base.Root" parent="Focusable.Root">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:clipChildren">false</item>
    </style>

    <style name="Carousel.Base.Rv" parent="Focusable.Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">@dimen/content_margin_inner</item>
        <item name="android:paddingStart">@dimen/content_margin_horizontal_with_menu</item>

        <item name="focusOutFront">true</item>
        <item name="itemSpacing">@dimen/carousel_item_spacing</item>
        <item name="itemAlignmentOffset">0dp</item>
        <item name="itemAlignmentOffsetPercent">0</item>
        <item name="windowAlignmentOffset">@dimen/content_margin_horizontal_with_menu</item>
        <item name="windowAlignmentOffsetPercent">0</item>

        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
        <item name="android:paddingEnd">250dp</item>
    </style>

    <style name="Carousel.Title" parent="Text.Regular.18">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/content_margin_horizontal_with_menu</item>
    </style>

    <style name="Carousel.Portrait.Root" parent="Carousel.Base.Root">
        <item name="android:layout_height">@dimen/carousel_height_portrait</item>
    </style>

    <style name="Carousel.Portrait.Rv" parent="Carousel.Base.Rv" />
</resources>