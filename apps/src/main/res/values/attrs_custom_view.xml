<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MenuItemView">
        <attr name="iconRes" format="reference" />
        <attr name="textRes" format="reference" />
    </declare-styleable>

    <declare-styleable name="ListItemView">
        <attr name="textId" format="reference" />
    </declare-styleable>

    <declare-styleable name="TvVerticalRv">
        <attr name="windowAlignmentOffset" format="dimension" />
        <attr name="windowAlignmentOffsetPercent" format="float" />
        <attr name="itemAlignmentOffset" format="dimension" />
        <attr name="itemAlignmentOffsetPercent" format="float" />

        <attr name="itemSpacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TvHorizontalRv">
        <attr name="windowAlignmentOffset" />
        <attr name="windowAlignmentOffsetPercent" />
        <attr name="itemAlignmentOffset" />
        <attr name="itemAlignmentOffsetPercent" />

        <attr name="itemSpacing" />
    </declare-styleable>

    <declare-styleable name="FixedAspectRatioCardView">
        <attr name="aspectRatioWidth" format="integer" />
        <attr name="aspectRatioHeight" format="integer" />
    </declare-styleable>
</resources>