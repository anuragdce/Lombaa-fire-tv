<?xml version="1.0" encoding="utf-8"?>
<navigation android:id="@+id/app_nav_graph"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/home_fragment">

    <action
        android:id="@+id/action_to_HomeFragment"
        app:destination="@id/home_fragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out" />

    <action
        android:id="@+id/action_to_HistoryFragment"
        app:destination="@id/history_fragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out" />

    <action
        android:id="@+id/action_to_ContactFragment"
        app:destination="@id/contact_fragment"
        app:enterAnim="@android:anim/fade_in"
        app:exitAnim="@android:anim/fade_out" />

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.lombaa.firetv.ui.home.HomeFragment"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/history_fragment"
        android:name="com.lombaa.firetv.ui.history.HistoryFragment"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/contact_fragment"
        android:name="com.lombaa.firetv.ui.contact.ContactFragment"
        tools:layout="@layout/fragment_contact" />

</navigation>