<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">@dimen/_38sdp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:minHeight">@dimen/_26sdp</item>
        <item name="android:foreground">@drawable/btn_ripple</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Button.Small" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="shapeAppearance">@style/ButtonAppearance</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:minHeight">@dimen/_26sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ButtonAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/_6sdp</item>
    </style>
</resources>